{
  "expo": {
    "name": "Theraklick",
    "slug": "theraklick-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F0FDF4"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.theraklick.mobile",
      "bitcode": false
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F0FDF4"
      },
      "package": "com.theraklick.mobile",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECORD_AUDIO",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.BLUETOOTH"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-asset",
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#16A34A",
          "defaultChannel": "default"
        }
      ],
      [
        "@config-plugins/react-native-webrtc",
        {
          "cameraPermission": "Theraklick needs camera access for video calls",
          "microphonePermission": "Theraklick needs microphone access for calls"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "efec72d7-ff68-4d16-ada2-f44bd0aa8fa4"
      }
    }
  }
}
